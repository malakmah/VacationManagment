@using VacationManagement.Models
@model List<sqlGetReports>
@{
    ViewData["Title"] = "ViewVacationReport2";
}

<h1>ViewVacationReport2</h1>

<form asp-controller="VacationPlans" asp-action="GetVacationReport">
    <dev class="row">
        <div class="form-group col-md-6">
            <label class="control-lable">From Date</label>
            <input type="date" name="FromDate" class="form-control" value="@(DateTime.Now.ToString("yyyy"))-01-01" />
        </div>

        <div class="form-group col-md-6">
            <label class="control-lable">To Date</label>
            <input type="date" name="ToDate" class="form-control" value="@(DateTime.Now.ToString("yyyy"))-12-30" />
        </div>
        @*      <div class="form-group col-md-2 mt-4 mb-5">
        <input type="submit" class="btn btn-primary col-md-12" value="Search" />
        </div> *@

        <div class="form-group col-md-6">
            <label class="control-lable">Employees</label>
            <select class="form-control" name="EmployeeId" asp-items="@(new SelectList( ViewBag.Employees,"Id","Name"))">
                <option value="0">----- Select Employee -----</option>
            </select>
        </div>
        <div class="form-group col-md-6">
            <label class="control-lable">Aprovet</label>
            <select class="form-control" name="Approved">
                <option value="0">-----No Approved -----</option>
                <option value="1">-----  Approved -----</option>

            </select>
        </div>
     
    </dev>

    <input type="submit" class="btn btn-info col-md-4" value="Search" />
</form>

@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Vacation Balance</th>
                <th>Total Balance</th>
                <th>Total</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                   <th>@item.Id</th>
                    <th>@item.Name</th>
                    <th>@item.VacationBalance</th>
                    <th>@item.TotalBalance</th>
                    <th>@item.Total</th>



                </tr>
            }

        </tbody>
    </table>

}
else
{
    <h4 class="alert alert-danger">No Data ....................................</h4>
}